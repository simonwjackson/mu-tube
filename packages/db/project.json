{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/db",
    "name": "db",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "packages/db",
                "command": "tsc --project ."
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "c8 --report-dir ./coverage/db jest --config ./packages/db/jest.config.ts"
            }
        },
        "coverage-report": {
            "dependsOn": [
                "test"
            ],
            "executor": "nx:run-commands",
            "options": {
                "command": "npx nyc merge ./coverage/db ./coverage/coverage-final.json"
            }
        }
    }
}
