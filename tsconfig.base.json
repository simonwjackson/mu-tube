{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages",
        "module": "ES2022",
        "outDir": "dist",
        "moduleResolution": "node",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "strict": false
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
